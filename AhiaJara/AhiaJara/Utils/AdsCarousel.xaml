<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AhiaJara.Utils.AdsCarousel" HeightRequest="140">
  <ContentView.Content>
        <Grid HeightRequest="140">
            <CarouselView
            x:Name="TheCarousel" ItemsSource="{Binding CarouselModelList}"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
            IndicatorView="indicatorview">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            HorizontalOptions="Fill">
                                <Image Source="{Binding Image}" HorizontalOptions="Fill" Aspect="Fill"/>
                            </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <IndicatorView
            x:Name="indicatorview"
                VerticalOptions="End"
            IndicatorColor="LightGray"
            IndicatorSize="10"
                Margin="0,0,0,5"
            SelectedIndicatorColor="Accent" />
        </Grid>
    </ContentView.Content>
</ContentView>