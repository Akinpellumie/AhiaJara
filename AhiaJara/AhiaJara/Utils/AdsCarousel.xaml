    <Grid x:Name="mainStack">
        <CarouselView
            VerticalOptions="Fill"
        x:Name="carouselView"
            HeightRequest="180"
            IsScrollAnimated="True"
            ItemsSource="{Binding CarouselModelList}"
            ItemsUpdatingScrollMode="KeepItemsInView"
            IndicatorView="indicatorView">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <pv:PancakeView CornerRadius="15" HorizontalOptions="Fill">
                            <Image Source="{Binding Image}" Aspect="AspectFill"/>
                        </pv:PancakeView>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView
            x:Name="indicatorView"
         Padding="0,0,0,3"
         HorizontalOptions="Center"
         IndicatorColor="White"
            Margin="0,0,0,3"
         IndicatorSize="7"
         SelectedIndicatorColor="Accent"
         VerticalOptions="End" />
    </Grid>
</ContentView>