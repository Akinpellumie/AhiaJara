                                                                        <Label Text="{Binding Price}" TextColor="{StaticResource Primary}"
                                                HorizontalOptions="Start" FontSize="Subtitle" FontAttributes="Bold"/>
                                                                        
                                                                    </StackLayout>
                                                                </Grid>
                                                            </StackLayout>-->
                                                            <StackLayout Grid.Row="2" Margin="0,5,0,0" x:Name="CompleteOrd">
                                                                <Button Text="Confirm Order Received"
                                                                        TextTransform="None"
                                                BackgroundColor="{Binding Path=BtnColor}"
                                                HorizontalOptions="Fill"
                                                HeightRequest="40"
                                                CornerRadius="15"
                                                Command="{Binding Path=BindingContext.CompleteOrder, Source={x:Reference orderPage}}"
                                                                        CommandParameter="{Binding .}"/>
                                                            </StackLayout>
                                                        </Grid>
                                                    </StackLayout>
                                                </pv:PancakeView>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </StackLayout>
                                </ScrollView>
                            </StackLayout>
                            <StackLayout x:Name="completedOrder">
                                <ActivityIndicator 
                Grid.RowSpan="2"
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
                                <ScrollView Orientation="Vertical" VerticalOptions="Fill">
                                    <StackLayout
                     x:Name="OrderItems"
                    BindableLayout.ItemsSource="{Binding CompletedOrders}"
                    Orientation="Vertical"
                    Spacing="10"
                    Padding="0"
                    Margin="10,0">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <pv:PancakeView Grid.Column="0" CornerRadius="0,15,15,0" BackgroundColor="White" Padding="10"
                                                HorizontalOptions="Fill" >
                                                    <StackLayout>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <StackLayout Grid.Row="0" Margin="10,0,0,0" 
                                                 HorizontalOptions="Start"
                                                 Orientation="Vertical">
                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label Text="Order ID:"
                                                   TextColor="{StaticResource TxtColor}"
                                                   FontSize="14"/>
                                                                    <Label Text="{Binding id}"
                                                   TextColor="{StaticResource TxtColor}"
                                                   FontSize="14"/>
                                                                </StackLayout>

                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label Text="Order Status:"
                                                   TextColor="{StaticResource TxtColor}"
                                                   FontSize="14"/>
                                                                    <Label Text="{Binding status}"
                                                   TextColor="{StaticResource TxtColor}"
                                                   FontSize="14"/>
                                                                </StackLayout>

                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label Text="{Binding dispatchedDate}"
                                                   TextColor="{StaticResource TxtColor}"
                                                   FontSize="14"/>
                                                                </StackLayout>

                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label Text="Price Paid:"
                                                   TextColor="{StaticResource TxtColor}"
                                                   FontSize="14"/>
                                                                    <Label Text="{Binding Price}"
                                                   TextColor="{StaticResource TxtColor}"
                                                   FontSize="14"/>
                                                                </StackLayout>
                                                            </StackLayout>
