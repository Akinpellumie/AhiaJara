                                                HorizontalOptions="Start" FontSize="Subtitle" FontAttributes="Bold"/>
                                                                        
                                                                    </StackLayout>
                                                                </Grid>
                                                            </StackLayout>-->
                                                        </Grid>
                                                    </StackLayout>
                                                </pv:PancakeView>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </StackLayout>
                                </ScrollView>
                            </StackLayout>
                        </tabs:ViewSwitcher>

                </ScrollView>

                </Grid>
            </StackLayout>

            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>